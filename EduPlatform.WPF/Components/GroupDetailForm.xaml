<UserControl x:Class="EduPlatform.WPF.Components.GroupDetailForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="940">

    <Grid Background="{StaticResource ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Group name"
                           Style="{StaticResource FormLabel}" />


                <Border Grid.Row="1"
                        Padding="10 0"
                        Style="{StaticResource FormBorder}"
                        Margin="40 0 20 15">
                    <TextBox Style="{StaticResource FormInput}"
                             Text="{Binding GroupName, 
                                UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Students"
                           Style="{StaticResource FormLabel}" />

                <Border Grid.Row="1"
                        Padding="10 10 10 10"
                        Style="{StaticResource FormBorder}"
                        Margin="40 0 20 0">
                    <ListView Background="{StaticResource ContentBackground}"
                              BorderThickness="0"
                              ItemsSource="{Binding StudentVMs}"
                              FontFamily="{StaticResource Alice}"
                              FontSize="18"
                              Foreground="{StaticResource MenuBackground}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding FullName}"
                                          IsChecked="{Binding IsChecked}"
                                          Style="{StaticResource MultipleChoice}"
                                          IsEnabled="{Binding IsEnabled}"
                                          Loaded="CheckBox_Loaded">
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Teachers"
                           Style="{StaticResource FormLabel}" />

                <Border Grid.Row="1"
                        Padding="10 10 10 10"
                        Style="{StaticResource FormBorder}"
                        Margin="20 0 40 15">
                    <ListView Background="{StaticResource ContentBackground}"
                              BorderThickness="0"
                              ItemsSource="{Binding TeacherVMs}"
                              FontFamily="{StaticResource Alice}"
                              FontSize="18"
                              Foreground="{StaticResource MenuBackground}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding FullName}"
                                          IsChecked="{Binding IsChecked, 
                                                      UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource MultipleChoice}"
                                          IsEnabled="{Binding IsEnabled}"
                                          PreviewMouseDown="CheckBox_PreviewMouseDown">
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Courses"
                           Style="{StaticResource FormLabel}" />

                <Border Grid.Row="1"
                        Padding="10 10 10 10"
                        Style="{StaticResource FormBorder}"
                        Margin="20 0 40 0">
                    <ListView Background="{StaticResource ContentBackground}"
                              BorderThickness="0"
                              ItemsSource="{Binding CourseVMs}"
                              FontFamily="{StaticResource Alice}"
                              FontSize="18"
                              Foreground="{StaticResource MenuBackground}"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding CourseName}"
                                             GroupName="GroupSelection"
                                             IsChecked="{Binding IsChecked, 
                                                         UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SingleChoice}"
                                             IsEnabled="{Binding IsEnabled}"
                                             PreviewMouseDown="RadioButton_PreviewMouseDown">
                                </RadioButton>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0" 
              Grid.ColumnSpan="2" 
              Margin="25 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancel"
                    HorizontalAlignment="Left"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource FormButton}" />

            <Grid Grid.Column="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasErrorMessage}" Value="True">
                                <Setter Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <TextBlock Text="{Binding ErrorMessage}"
                           Style="{StaticResource CourseFormErrorMessageStyle}" />
            </Grid>

            <Button Grid.Column="2"
                    Content="Submit"
                    HorizontalAlignment="Right"
                    Command="{Binding SubmitCommand}"
                    IsEnabled="{Binding CanSubmit}"
                    Style="{StaticResource FormButton}" />
        </Grid>
    </Grid>

</UserControl>